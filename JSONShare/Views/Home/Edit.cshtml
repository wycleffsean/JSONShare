@model JSONShare.Models.JsonItem

@{
    ViewBag.Title = string.IsNullOrEmpty(Model.Title) ? "JSON Share" : Model.Title + " - JSON Share";
}
<pre>Created: @Model.Created</pre>
<pre>Updated: @Model.Updated</pre>
<pre>Viewed: @Model.Viewed</pre>

@Model.Created

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    @Html.EditorFor(m => m)  
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
